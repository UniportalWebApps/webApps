    ]]>
     </value>
    </property>
</bean>
	<!--  -->

<bean id="emailSendingManager" class="org.uniportal.manager.EmailSendingManager" />

	
	
	<!--  Interceptors Bean -->	
	  <mvc:interceptors>	       

    <mvc:interceptor> 
    <mvc:mapping path="/content/*" />     
    <!--  Interceptor for all request except the login page -->
	  <bean class="org.uniportal.interceptor.AllAcessAtemptInterceptor" />
    </mvc:interceptor>     
  </mvc:interceptors>
    
</beans>
